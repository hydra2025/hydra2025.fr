---
import facebook from "../assets/socials/facebook.svg?raw";
import instagram from "../assets/socials/instagram.svg?raw";
import youtube from "../assets/socials/youtube.svg?raw";
---

<footer>
    <div class="pied">
        <div class="gauche">
            <h1 class="title">hydra</h1>
            <div>Copyright © 2024</div>
        </div>
        <div class="droite">
            <div>Réalisé par : Alexis ROSSFELDER | Nathan BEAUCHOUX</div>
            <div class="socials">
                <a
                    class="social"
                    href="https://www.facebook.com/profile.php?id=61568342853940&locale=fr_FR"
                >
                    <Fragment set:html={facebook} />
                </a>
                <a
                    class="social"
                    href="https://www.instagram.com/hydra_liste2025/"
                >
                    <Fragment set:html={instagram} />
                </a>
                <a
                    class="social"
                    href="https://www.youtube.com/@HydraTMSP-2025"
                >
                    <Fragment set:html={youtube} />
                </a>
            </div>
        </div>
    </div>

    <style>
        .pied {
            position: absolute;
            translate: -50%;
            background-color: black;
            width: 100%;
            height: 5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .title {
            font-family: var(--font-family-title);
            text-transform: uppercase;
        }
        .gauche {
            display: flex;
            align-items: center;
            gap: 2rem;
            margin: 2rem;
        }
        .droite {
            display: flex;
            align-items: center;
            gap: 2rem;
            margin: 2rem;
        }
        .socials {
            display: flex;
            height: 100%;
            gap: 0.25em;
            align-items: center;
        }
        .social {
            width: 1.5em;
            height: 1.5em;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            transition: transform 0.3s ease;
            color: var(--color-primary);
        }
        .social:hover {
            transform: scale(1.2);
        }
    </style>
</footer>
