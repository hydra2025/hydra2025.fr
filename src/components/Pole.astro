---
import Popup from "../components/Popup.astro";
import type { Pole } from "../organigramme";
import Separator from "./boxes/Separator.astro";
interface Props {
  pole: Pole;
}
const { pole } = Astro.props;
---

<div class:list={["pole", { full_width: pole.full_width }]}>
  <h3>{pole.name}</h3>
  <Separator />
  <div class="organigramme-grid">
    {pole.members.map((membre) => <Popup membre={membre} />)}
  </div>
</div>

<style>
  .pole {
    justify-content: center;
    width: fit-content;
  }
  .organigramme-grid {
    display: flex;
    margin: auto;
    flex-wrap: wrap;
    gap: 2rem;
    width: fit-content;
    justify-content: center;
  }

  .full_width {
    width: 100%;
  }

  h3 {
    text-align: center;
    font-family: var(--font-family-text);
    width: fit-content;
    margin: 1em auto;
  }
</style>
