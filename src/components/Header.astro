---
import logo512 from "../assets/logo-512.png";
import "@fontsource-variable/open-sans";
import Image from "astro/components/Image.astro";

const links = [
  { href: "/", text: "Accueil" },
  { href: "/programme", text: "Programme" },
  { href: "/organigramme", text: "Organigramme" },
  { href: "/floppyboat", text: "Let's Play" },
  { href: "/next-event", text: "Évènement" },
];
---

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: transparent;
    max-width: calc(100% - var(--side-gap) * 2);
    width: calc(100% - var(--side-gap) * 2);

    top: 0;
    z-index: 1000;
    box-sizing: border-box;
    font-size: 1.5rem;
    margin: 0 auto;
  }

  .logo-title {
    display: flex;
    align-items: center;
  }

  .logo {
    margin-right: 1rem;
    height: 5rem;
    width: 6rem;
    object-fit: contain;
    transform: scale(1);
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.2);
  }

  .title {
    font-family: var(--font-family-title);
    text-transform: uppercase;
    cursor: pointer;
    transition: color 0.3s ease;
    text-shadow: 3px 3px 0px var(--color-background);
  }

  .title a {
    color: var(--color-text);
    text-decoration: none;
  }

  .title:hover {
    color: var(--color-primary);
  }

  nav {
    display: flex;
    justify-content: space-between;
    gap: 1em;
    font-family: "Open Sans Variable", sans-serif;
    font-weight: 600;
    font-size: 1.2rem;
    margin-left: 1em;
  }

  nav a {
    color: var(--color-text);
    text-decoration: none;
    transition:
      color 0.3s,
      text-decoration 0.3s;
  }

  nav a:hover,
  nav a:active,
  nav a:focus {
    color: var(--color-primary);
  }

  @media screen and (max-width: 1268px) {
    header {
      flex-direction: column;
      align-items: center;
      width: 100%;
      max-width: 100%;
    }

    .title {
      text-align: center;
    }

    nav {
      margin-left: 0;
    }
  }

  @media screen and (max-width: 768px) {
    .title {
      font-size: 3rem;
    }
    nav {
      flex-direction: column;
      gap: 1rem;
      font-size: 1.5rem;
      align-items: center;
    }

    .logo {
      height: 4rem;
      width: 5rem;
    }

    .logo:hover {
      transform: scale(1.2);
    }
  }

  /* Underline From Center */
  .hvr-underline-from-center {
    display: inline-block;
    vertical-align: middle;
    -webkit-transform: perspective(1px) translateZ(0);
    transform: perspective(1px) translateZ(0);
    box-shadow: 0 0 1px rgba(0, 0, 0, 0);
    position: relative;
    overflow: hidden;
  }
  .hvr-underline-from-center:before {
    content: "";
    position: absolute;
    z-index: -1;
    left: 51%;
    right: 51%;
    background-color: var(--color-text);
    bottom: 0;
    height: 2px;
    -webkit-transition-property: left, right, background-color;
    transition-property: left, right, background-color;
    -webkit-transition-duration: 0.3s;
    transition-duration: 0.3s;
    -webkit-transition-timing-function: ease-out;
    transition-timing-function: ease-out;
  }
  .hvr-underline-from-center:hover:before,
  .hvr-underline-from-center:focus:before,
  .hvr-underline-from-center:active:before {
    background: var(--color-primary);
    left: 0;
    right: 0;
  }
</style>

<header>
  <div class="logo-title">
    <Image
      src={logo512}
      alt="Logo Hydra"
      class="logo"
      fetchpriority="high"
      loading="eager"
      width={100}
      height={100}
    />
    <h1 class="title"><a href="/">Hydra</a></h1>
  </div>
  <nav>
    {
      links.map((link) => (
        <a href={link.href} class="hvr-underline-from-center">
          {link.text}
        </a>
      ))
    }
  </nav>
</header>
