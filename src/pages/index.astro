      <div class="button-grid">
        <Button href="/organigramme">L'Ã©quipage</Button>
        <Button href="#lore">Immersion</Button>
        <Button>La mission</Button>
        <Button>Contact</Button>
      </div>
    </div>
    <RotatingLogo slot="right" />
  </Hero2Col>
  <h2 id="lore">Le Lore</h2>
