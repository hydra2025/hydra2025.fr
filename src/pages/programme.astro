---
import ParagrapheProgramme from "../layouts/boxes/ParagrapheProgramme.vue";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import programmeComplet from "../programme";
---

<Layout title="La mission">
  <h1>Programme BDE<br /><span class="accent">HYDRA</span></h1>
  <div id="clip-programme">
    <Button href="/clip_programme" width="fit-content"
      >Voir la vid√©o du programme</Button
    >
  </div>

  {
    programmeComplet.map((paragraph) => (
      <ParagrapheProgramme paragraph={paragraph} client:load />
    ))
  }
</Layout>
<style>
  h1 {
    font-family: var(--font-family-text);
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
  }
  .accent {
    color: var(--color-primary);
    font-family: var(--font-family-title);
    font-size: 1.3em;
  }
  #clip-programme {
    display: flex;
    justify-content: center;
    margin-bottom: 4em;
  }
</style>
