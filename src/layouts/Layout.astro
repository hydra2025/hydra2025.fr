---
import Header from "../components/Header.astro";
import "../style/TTMusselsStencilTrl.astro";

import "@fontsource-variable/open-sans";

import computed_colors from "../style/Colors.ts";
import Background from "../components/Background.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- IE -->
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
    <!-- other browsers -->
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Hydra - {title}</title>
  </head>
  <body>
    <Background />
    <Header />
    <slot />
  </body>
</html>

<style define:vars={computed_colors}>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
  :root {
    --side-gap: 10rem;
    --header-height: 10rem;

    --font-family-title: "TT Mussels Stencil Trl", sans-serif;
    --font-family-text: "Open Sans Variable", sans-serif;

    color: var(--color-text);
    background: var(--color-background);
    font-family: var(--font-family-text);
  }
  ::selection {
    background: var(--color-primary);
    color: var(--color-on-primary);
  }
</style>
<style is:global>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-family-title);
    font-weight: bolder;
  }
</style>
